<div class="contact--section-wrap ">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <div class="title">
        {{ section.settings.title }}
      </div>
    {%- endif -%}
    {%- if section.settings.subtitle != blank -%}
      <div class="subtitle">
        {{ section.settings.subtitle }}
      </div>
    {%- endif -%}
    <div class="inner_content_wrap">
      {%- if section.settings.icon != blank -%}
        <div class="icon">
          {{ section.settings.icon }}
        </div>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <div class="heading">{{ section.settings.heading }}</div>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <div class="description">{{ section.settings.description }}</div>
      {%- endif -%}
      {%- if section.settings.btn_text != blank or section.settings.btn_url != blank -%}
        <a href="{{ section.settings.btn_url }}">
          <div class="button">
            {{ section.settings.btn_text }}
          </div>
        </a>
      {%- endif -%}
    </div>

    <div class="text-banner-wrap">
      {%- for block in section.blocks -%}
        {%- if block.type == 'text' -%}
          <div class="content_wrap{{ forloop.index }}">
            {%- if block.settings.content != blank -%}
              <div class="content">{{ block.settings.content }}</div>
            {%- endif -%}
          </div>
        {%- endif -%}
        {%- if block.type == 'banner' -%}
          {%- if block.settings.image != blank -%}
            <div class="banner_wrap">
              <img src="{{ block.settings.image | img_url: 'original' }}">
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact",
  "settings": [
    {
      "type":"text",
      "id":"title",
      "label":"Title",
      "default":"We'd love to hear from you"
      },
      {
      "type":"text",
      "id":"subtitle",
      "label":"SubTitle",
      "default":"QUICK LINKS"
      },
      {
        "type":"html",
        "id":"icon",
        "label":"Icon"
      },
      {
      "type":"text",
      "id":"heading",
      "label":"Heading",
      "default":"I want to return something"
      },
      {
      "type":"richtext",
      "id":"description",
      "label":"Description"
      },
       {
      "type":"text",
      "id":"btn_text",
      "label":"Button Text"
      },
       {
      "type":"url",
      "id":"btn_url",
      "label":"Button URL"
  }
  ],
  "blocks":[
    {
      "name":"Text",
      "type":"text",
       "limit":1,
      "settings":[
        {
          "type":"richtext",
          "id":"content",
          "label":"Content"
        }
      ]
    },
     {
      "name":"Banner",
      "type":"banner",
       "limit":1,
      "settings":[
        {
          "type":"image_picker",
          "id":"image",
          "label":"Image"
        }
      ]
    }
  ],
  "presets":[
    {
      "name":"Contact",
      "category":"contact"
    }
  ]
}
{% endschema %}

