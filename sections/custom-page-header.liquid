<div class="custompage--header-wrap">
  <div class="content-container">
    {% for block in section.blocks %}
        {% if block.settings.heading != blank %}
            <div class="content-wrap">
              <a href="{{ block.settings.headingurl }}">
                <div class="header--text">{{ block.settings.heading }}</div>
              </a>
            </div>
        {% endif %}
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Custom Page Header",
    "settings": [],
    "blocks":[
      {
        "name":"Content",
        "type":"header",
        "settings":[
          {
            "type":"text",
            "id":"heading",
            "label":"Text"
          },
          {
            "type":"url",
            "id":"headingurl",
            "label":"Link"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"Custom Page Header",
        "category":"header"
      }
    ]
  }
{% endschema %}

